<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHighlight">@color/accent</item>
    </style>

    <style name="GreenStyle">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
    </style>

    <style name="BrownStyle">
        <item name="colorPrimary">@color/primary_brown</item>
        <item name="colorPrimaryDark">@color/primary_brown_dark</item>
    </style>

    <style name="TealStyle">
        <item name="colorPrimary">@color/primary_teal</item>
        <item name="colorPrimaryDark">@color/primary_teal_dark</item>
    </style>

    <style name="IndigoStyle">
        <item name="colorPrimary">@color/primary_indigo</item>
        <item name="colorPrimaryDark">@color/primary_indigo_dark</item>
    </style>

    <style name="PurpleStyle">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primary_purple_dark</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme" />


    <style name="AppTheme.Main" />

    <style name="AppTheme.Main.Green" parent="GreenStyle" />

    <style name="AppTheme.Main.Brown" parent="BrownStyle" />

    <style name="AppTheme.Main.Teal" parent="TealStyle" />

    <style name="AppTheme.Main.Indigo" parent="IndigoStyle" />

    <style name="AppTheme.Main.Purple" parent="PurpleStyle" />


    <style name="AppTheme.CityPicker" parent="AppTheme" />

    <style name="AppTheme.CityPicker.Green" parent="GreenStyle" />

    <style name="AppTheme.CityPicker.Brown" parent="BrownStyle" />

    <style name="AppTheme.CityPicker.Teal" parent="TealStyle" />

    <style name="AppTheme.CityPicker.Indigo" parent="IndigoStyle" />

    <style name="AppTheme.CityPicker.Purple" parent="PurpleStyle" />


    <style name="AppTheme.Splash" parent="AppTheme" />

    <style name="AppTheme.Splash.Green" parent="GreenStyle" />

    <style name="AppTheme.Splash.Brown" parent="BrownStyle" />

    <style name="AppTheme.Splash.Teal" parent="TealStyle" />

    <style name="AppTheme.Splash.Indigo" parent="IndigoStyle" />

    <style name="AppTheme.Splash.Purple" parent="PurpleStyle" />


    <style name="AppTheme.Settings" parent="AppTheme" />

    <style name="AppTheme.Settings.Green" parent="GreenStyle" />

    <style name="AppTheme.Settings.Brown" parent="BrownStyle" />

    <style name="AppTheme.Settings.Teal" parent="TealStyle" />

    <style name="AppTheme.Settings.Indigo" parent="IndigoStyle" />

    <style name="AppTheme.Settings.Purple" parent="PurpleStyle" />


    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.DayNight</item>
    </style>

</resources>
